<!--components/video-item/index.wxml-->
<wxs src="/utils/format.wxs" module="format" />
<view class="video-item">
  <view class="cover">
    <image wx:if="{{item.cover}}" class="cover-img" src="{{item.cover}}"></image>
    <image class="icon" src="/assets/images/icons/play_icon.png"></image>
    <view class="info">
      <view class="count">{{format.formatCount(item.playCount)}}</view>
      <view class="duration">{{format.formatDuration(item.mv.videos[0].duration)}}</view>
    </view>
  </view>
  <view class="name">{{item.name}} - <text class="artistName">{{item.artistName}}</text></view>
  <view class="play-info">
    
  </view>
</view>
