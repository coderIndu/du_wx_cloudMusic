/* pages/video-details/index.wxss */
.detail {
  width: 100%;
}

.detail-info {
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
}

.detail-info-desc {
  font-size: 26rpx;
  font-weight: 600;
}

.detail-info-name, .detail-info-play {
  margin: 10rpx 0;
  font-size: 24rpx;
  color: #ccc;
}

.detail-relate {
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  margin-bottom: 20rpx;
  height: 60vh;
  overflow: auto;
}

.detail-relate-item {
  width: 100%;
  display: flex;
  height: 120rpx;
  margin: 20rpx 0;
}

.detail-relate-left image {
  width: 230rpx;
  height: 100%;
  border-radius: 8rpx;
}

.detail-relate-right {
  padding: 10rpx 0;
  font-size: 26rpx;
  margin-left: 20rpx;
  font-weight: 600;
}

.detail-relate-username {
  margin: 5rpx 0;
  font-size: 22rpx;
  color: #ccc;
  font-weight: normal;
}
